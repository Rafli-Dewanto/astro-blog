---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/globals.css";
const pageTitle = "About";

const identity = {
    firstName: "Rafli Dewanto",
    country: "Indonesia",
    occupation: "Back-end Dev",
    hobbies: ["music", "coding", "basketball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Node.js"];

const happy = true;
const finished = true;
const goal = 3;
const skillColor = "#D14D72";
---

<style define:vars={{ skillColor }}>
    h1 {
        color: purple;
        font-size: 4rem;
    }

    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
    }
</style>

<BaseLayout pageTitle={pageTitle}>
    <p>Here are a few facts about me:</p>
    <ul>
        <li>My name is {identity.firstName}.</li>
        <li>
            I live in {identity.country} and I work as a {identity.occupation}.
        </li>
        {
            identity.hobbies.length >= 2 && (
                <li>
                    Two of my hobbies are: {identity.hobbies[0]} and{" "}
                    {identity.hobbies[1]}
                </li>
            )
        }
    </ul>
    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class='skill'>{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {
        goal === 3 ? (
            <p>My goal is to finish in 3 days.</p>
        ) : (
            <p>My goal is not 3 days.</p>
        )
    }
    <script>
        import "../scripts/menu.js";
    </script>
</BaseLayout>
